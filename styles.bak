body {
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  font-size: 16px;
  line-height: 1.5;
  color: #333;
  background-color: #f9f9f9;
}

.app {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 20px;
}

h1 {
  font-size: 32px;
  margin-bottom: 20px;
}

p {
  font-size: 18px;
  margin-bottom: 20px;
}

input[type="number"] {
  font-size: 16px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  outline: none;
  margin-right: 10px;
}

input[type="number"]:focus {
  border-color: #66afe9;
}

button {
  font-size: 16px;
  padding: 10px 20px;
  border: none;
  border-radius: 4px;
  background-color: #007bff;
  color: #fff;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

button:hover {
  background-color: #0056b3;
}

button:disabled {
  background-color: #ccc;
  cursor: not-allowed;
}

.top-bar {
  display: flex;
  justify-content: space-around;
  background-color: #6c757d; /* Change the background color to grey */
  padding: 10px 0;
  font-size: 16px; /* Reduce the font size for a more minimalist look */
}

.top-bar a {
  color: #fff;
  text-decoration: none;
  transition: color 0.2s ease;
}

.top-bar a:hover {
  color: #cce4ff;
}

.conversion-text p {
  font-size: 24px; /* Increase the font size for the conversion text */
  font-weight: bold;
  color: #007bff; /* Change the color to make it more eye-catching */
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3); /* Add a text shadow for better contrast */
}
